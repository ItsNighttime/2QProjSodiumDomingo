body {
	background-color: green;	
	font-family: Arial;
}
header {
	text-align: center;
}
.imgborder {
	border: 3px solid black;
}
#youtube{
	position: absolute;
	top: 150px;
	right: 20px;
}
#twitter{
	position: absolute;
	top: 150px;
	right: 93px;
}
#facebook{
	position: absolute;
	top: 150px;
	right: 166px;
}
#youtube:hover{
	width: 50px;
	height: 50px;
	top: 130px;
	right: 10px;
}
#twitter:hover{
	width: 50px;
	height: 50px;
	top: 130px;
	right: 83px;
}
#facebook:hover{
	width: 50px;
	height: 50px;
	top: 130px;
	right: 153px;
}
header > p{
	position: absolute;
	font-size: 20px;
	font-family: Arial;
	top: 135px;
	right: 210px;
}
article {
	position: absolute;
	background-color: white;
	width: 960px;
	border: 3px solid black;
	float: left;
	font-size: 20px;
	overflow: auto;
	border-radius: 20px
}
nav {
	position: absolute;
	background-color: rgb(0, 168, 243);
	width: 487px;
	border: 3px solid black;
	top: 210px;
	right: 10px;
	font-size: 20px;
	border-radius: 20px;
}
aside{
	position: absolute;
	background-color: rgb(0, 168, 243);
	width: 487px;
	border: 3px solid black;
	top: 387px;
	right: 10px;
	font-size: 20px;
	border-radius: 20px;
}
.distance{
	line-height: 2;
}
li a:link, #previous:link, #next:link, .behind:link{
    display: block;
    color: black;
    padding: 0px;
    text-decoration: none;
}
li a:visited, #previous:visited, #next:visited, .behind:visited{
    color: black;
}
li a:hover, #next:hover{
    color: white;
	transform: skewX(-10deg);
}
li a:active, #next:active{
    color: rgb(0, 6, 124);
	transform: skewX(-10deg);
}
#previous:hover, .behind:hover{
	color: white;
	transform: skewX(10deg);
}
#previous:active, .behind:active{
	color: rgb(0, 6, 124);
	transform: skewX(10deg);
}
#previous {
	background-color: rgb(0, 168, 243);
	border: 3px solid black;
	position: absolute;
	bottom: -716px;
	right: 10px;
	width: 150px;
	text-align: center;
	font-size: 20px;
	border-radius: 20px;
}
#next{
	background-color: rgb(0, 168, 243);
	border: 3px solid black;
	position: absolute;
	bottom: -676px;
	right: 10px;
	width: 150px;
	text-align: center;
	font-size: 20px;
	border-radius: 20px;
}
